<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!-- 添加颜色显示，更容易区分 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder> <!--时间 输出线程名字 输出日志的级别 -->
    </appender>

    <!-- 系统文件输出 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>D:/tlias-%d{yyyy-MM-dd}-%i.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-%msg%n</pattern>
        </encoder>
    </appender>

    <!-- 重要配置：设置不同包的日志级别 -->

    <!-- 1. 你的项目包设置为 DEBUG，这样能看到所有日志 -->
    <logger name="com.itheima" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- 2. MyBatis 相关日志 -->
    <logger name="com.itheima.mapper" level="DEBUG"/>
    <logger name="org.mybatis" level="DEBUG"/>

    <!-- 3. Spring 相关日志设置为 INFO，减少噪音 -->
    <logger name="org.springframework" level="INFO"/>

    <!-- 4. 过滤掉大量系统 DEBUG 日志 -->
    <logger name="sun.rmi" level="WARN"/>
    <logger name="javax.management" level="WARN"/>
    <logger name="org.apache.tomcat" level="WARN"/>
    <logger name="org.apache.catalina" level="WARN"/>
    <logger name="org.apache.coyote" level="WARN"/>

    <!-- 5. JDBC/SQL 日志 -->
    <logger name="java.sql" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- 根日志设置为 WARN，避免所有 DEBUG 日志 -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>